{
  "name": "rem42/scraper-giantbomb",
  "description": "Giantbomb API Scraper",
  "license": "MIT",
  "authors": [
    {
      "name": "rem42",
      "email": "me@remy.ovh",
      "homepage": "https://remy.ovh"
    }
  ],
  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "doctrine/collections": "^1.6",
    "rem42/scraper": "3.x-dev",
    "symfony/serializer-pack": "^1.0"
  },
  "require-dev": {
    "rem42/php-cs-fixer-config": "^3.1",
    "phpstan/phpstan": "^1.0",
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "psr-0": {
      "Scraper\\ScraperGiantBomb\\": "src/"
    },
    "psr-4": {
      "Scraper\\ScraperGiantBomb\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-0": {
      "Scraper\\ScraperGiantBomb\\Tests\\": "tests/"
    },
    "psr-4": {
      "Scraper\\ScraperGiantBomb\\Tests\\": "tests/"
    }
  },
  "config": {
    "bin-dir": "bin/"
  },
  "scripts": {
    "static-analysis": "./bin/phpstan analyse src --level=max --no-progress -vvv",
    "code-style-check": "./bin/php-cs-fixer fix --dry-run --verbose",
    "code-style-fix": "./bin/php-cs-fixer fix",
    "unit-test": "./bin/phpunit"
  },
  "sort-packages": true
}
